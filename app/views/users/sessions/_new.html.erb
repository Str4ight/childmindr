<!-- forms_styling.css.scss -->
<div class="medium-12 columns login_section form_general_section">
  <div class="form_general_inner_section login_inner_section">
    <div class="section_header">Log in to your account</div>
    <div class="inner_form_content">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="input_section">
            <div><%= f.input :email, required: false, autofocus: true, placeholder: "Email Address", label: false %></div>
          </div>
          <div class="input_section">
            <div><%= f.input :password, required: false, placeholder: "Password", label: false %></div>
          </div>
          <div class="remember_box"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%></div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <div class="form_links"><%= render "users/shared/links" %></div>
    </div>
  </div>
</div>
