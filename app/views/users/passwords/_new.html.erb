<!-- forms_styling.css.scss -->
<div class="medium-12 columns forgotpassword_section form_general_section">
  <div class="form_general_inner_section forgotpassword_inner_section">
    <div class="section_header">Forgot your password?</div>
    <div class="inner_form_content">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <div class="input_section">
            <div><%= f.input :email, required: true, autofocus: true, placeholder: "Email Address", label: false %></div>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions" %>
        </div>
      <% end %>
      <div class="form_links"><%= render "users/shared/links" %></div>
    </div>
  </div>
</div>
