<div class="reveal modal_general_design" id="<%= dom_id(@user) %>_user_telephone" data-reveal>
  <div class="modal_header data_modal_header"><%= "#{@user.firstname} Telephone Number" %></div>
  <div class="medium-12 columns modal_content">
    <div class="telephone_number"><%= @user.telephone %></div>
  </div>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>